---
export interface CardProps {
  titulo: string;
  texto: string;
  link: string;
}

const { titulo, texto, link } = Astro.props;
---

<div class="flex gap-2 p-4 card_size my-2">
  <div class="mt-2">
    <slot />
  </div>
  <div>
    <h1 class="text-2xl font-semibold text-[#202734] font-main">
      {titulo}
    </h1>
    <p class="text-justify my-2">{texto}</p>
    <a
      href={link}
      class="text-[#6db2b2] hover:text-[#006868] font-bold mt-2 transform duration-500 ease-in font-main"
      >Saiba Mais</a
    >
  </div>
</div>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Anton&family=Lobster+Two:ital,wght@0,400;0,700;1,400;1,700&display=swap");
  .font-main {
    font-family: "Lobster Two", cursive;
  }
  .card_size {
    width: 400px;
  }
</style>
