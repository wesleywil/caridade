---
export interface CardProps {
  titulo: string;
  texto: string;
  link: string;
}

const { titulo, texto, link } = Astro.props;
---

<div class="flex gap-2 p-4 card_size mt-2">
  <div class="mt-2 w-fit h-fit">
    <img src="https://dummyimage.com/1000x1000" alt="" class="w-40 h-12" />
  </div>
  <div>
    <h1 class="text-2xl font-semibold">
      {titulo}
    </h1>
    <p class="text-justify">{texto}</p>
    <a href={link} class="text-purple-500">Saiba Mais</a>
  </div>
</div>

<style>
  .card_size {
    width: 350px;
  }
</style>
