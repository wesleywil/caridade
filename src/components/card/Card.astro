---
export interface CardProps {
  titulo: string;
  texto: string;
  link: string;
}

const { titulo, texto, link } = Astro.props;
---

<div class="flex gap-2 p-4 card_size my-2">
  <div class="mt-2">
    <img
      src="https://dummyimage.com/300x300"
      alt=""
      class="w-40 h-12 rounded-full"
    />
  </div>
  <div>
    <h1 class="text-2xl font-semibold text-[#202734]">
      {titulo}
    </h1>
    <p class="text-justify my-2">{texto}</p>
    <a
      href={link}
      class="text-[#6db2b2] hover:text-[#006868] font-bold mt-2 transform duration-500 ease-in"
      >Saiba Mais</a
    >
  </div>
</div>

<style>
  .card_size {
    width: 400px;
  }
</style>
